@model  IPagedList<BackWebAdmin.ChangeGoodsLogModel>
@using MvcContrib.UI.Grid
@using MvcContrib.Pagination;
@using MvcContrib.UI.Pager;
@using Common;


<style>
    .combo {
        vertical-align: bottom;
    }
</style>
<div id="button-bar">
    <a class="easyui-linkbutton" title="积分兑换记录" >积分兑换记录</a>
</div>
<div class="grid_box">
    <div class="grid_top">
    </div>
    @Html.Grid(Model).Columns(column =>
                                  {
                                      column.For(x => x.CGoods.Id).Named("商品Id");
                                      column.For(x => x.CGoods.Name).Named("商品名称");
                                      column.For(x => x.CGoods.Score).Named("消耗积分");
                                      column.For(x => x.CGoods.Desc).Named("商品描述");
                                   
                                      column.For(x => x.User.RealName).Named("兑换用户姓名");
                                      column.For(x => x.User.Phone).Named("兑换用户手机号");
                                      column.For(x => x.CGoodsLogs.AddTime.ToString("yyyy-MM-dd HH:ss")).Named("兑换时间");
                               
                                      //column.Buttons(btns => btns
                                      //    .Add(x => Html.ActionLink("查看", "view", new { id = x.Id }))
                                      //    .Add(x => Html.ScriptLink("删除", "del({0})".FormatWith(x.Id)))

                                        //                        );
                                  }).Complex(ViewData)
    <div class="grid_foot">
    </div>
</div>

@Html.Pager(Model)
