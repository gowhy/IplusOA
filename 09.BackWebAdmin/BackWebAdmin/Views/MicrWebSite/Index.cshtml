@model  IPagedList<BackWebAdmin.MicrWebSiteModel>
@using MvcContrib.UI.Grid
@using MvcContrib.Pagination;
@using MvcContrib.UI.Pager;
@using Common;

<script type="text/javascript">

    function del(id) {

        var url = '@Url.Action("Delete")' + '?id=' + id;
        deleteMethod(id, "Delete");
        //showAjaxResult(url, "删除用户中......", 600, 400);
    }
    function submitForm() {
        // var url = "/SocSer/PostNoTakeIn" + '?detailId=' + id + "&state=" + state + "&msg=" + msg;
        $('#indexFrom').submit();
    }





</script>
<style>
    .combo {
        vertical-align: bottom;
    }
</style>
<div style="height:500px; min-height:500px">
    <form id="indexFrom">

        <div style="float: left; height: 40px; text-align: center;">
            <span><a class="easyui-linkbutton" data-options="iconCls:'icon-add'" title="新增" href="@Url.Action("Add")">新增</a></span>

        </div>
    </form>
    <div class="grid_box">
        <div class="grid_top">
        </div>
        @Html.Grid(Model).Columns(column =>
                                  {
                                      // column.CheckBox(x => x.Id);
                                      //   column.For(x => x.Id).Named("编号").HeaderAttributes(style => "width:50px;align:center;");
                                      column.For(x => x.MicrWebSiteEntity.Id).Named("编号");
                                      column.For(x => x.MicrWebSiteEntity.Name).Named("名称");
                                      column.For(x => x.MicrWebSiteEntity.Type).Named("类型");
                                      column.For(x => x.MicrWebSiteEntity.DeptId).Named("社区Id");
                                      column.For(x => x.MicrWebSiteEntity.LinkUrl).Named("连接地址");
                                      column.For(x => x.MicrWebSiteEntity.ImgUrl).Named("App用图片");
                                      column.For(x => x.DepartmentEntity.Name).Named("社区名称");
                                      column.For(x => x.BackAdminUserEntity.UserName).Named("添加人员用户名");
                                      column.For(x => x.BackAdminUserEntity.RealName).Named("添加人员真实姓名");
                                      column.For(x => x.BackAdminUserEntity.Phone).Named("添加人员手机号");
                                      column.For(x => x.MicrWebSiteEntity.AddTime.ToString("yyyy-MM-dd HH:mm")).Named("添加时间");
                                      // column.For(x => x.DepName).Named("社区");
                                      column.Buttons(btns => btns
                                          .Add(x => Html.ActionLink("编辑", "edit", new { id = x.MicrWebSiteEntity.Id }))
                                          .Add(x => Html.ScriptLink("删除", "del({0})".FormatWith(x.MicrWebSiteEntity.Id)))

                                                                 );
                                  }).Complex(ViewData)
        <div class="grid_foot">
        </div>
    </div>
    @Html.Pager(Model)
</div>

