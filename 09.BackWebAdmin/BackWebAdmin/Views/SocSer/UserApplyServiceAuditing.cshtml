@using Common;
@model BackWebAdmin.Models.ShowApplyEntity

@Html.IncludeCSS("~/Content/plug-in/ztree/css/zTreeStyle/zTreeStyle.css")
@Html.IncludeCSS("~/Content/Css/demo.css")
@Html.IncludeScript("~/Content/plug-in/ztree/js/jquery.ztree.core-3.5.js")
@Html.IncludeScript("~/Content/plug-in/ztree/js/jquery.ztree.excheck-3.5.js")
@Html.IncludeCSS("~/Content/EasyUI/themes/gray/easyui.css")
@Html.IncludeCSS("~/Content/EasyUI/themes/icon.css")

@Html.IncludeScript("~/Content/EasyUI/jquery.easyui.min.js")
<style>
    .panel-tool {
        width: 95%;
        float: left;
    }

    .item_title {
        background: none;
    }
</style>
<div style="height:500px; min-height:500px">
    <div class="main">

        <div class="blank5"></div>
        <form name="UserApplyServiceAuditing" id="UserApplyServiceAuditing" action="@Url.Action("PostUserApplyServiceAuditing")" method="post" enctype="multipart/form-data">
            <table class="form" cellpadding="0" cellspacing="0">
                <tbody>


                    <tr>
                        <td class="item_title">
                            姓名
                        </td>
                        <td class="item_input">
                            @((Model.UserEntiy?? new IplusOAEntity.VolunteerEntity()).RealName)
                        </td>
                    </tr>

                    <tr>
                        <td class="item_title">
                            联系电话
                        </td>
                        <td class="item_input ">
                            @Model.UserEntiy.Phone
                        </td>
                    </tr>
                    <tr>
                        <td class="item_title">
                            所需志愿者
                        </td>
                        <td class="item_input"><input type="text" class="textbox require easyui-numberbox" name="num" value="@Model.ApplyEntiy.Num" /></td>
                    </tr>
                    <tr>
                        <td class="item_title">原因:</td>
                        <td class="item_input"><textarea class="textbox require" id="msg" name="Msg" rows="5" cols="70">@Model.ApplyEntiy.Msg</textarea></td>
                    </tr>



                    <tr>
                        <td class="item_title"></td>
                        <td class="item_input">
                            <input type="hidden" id="id" name="id" value="@Model.ApplyEntiy.Id" />
                            <input type="hidden" id="state" name="state" value="2" />
                            <a href="javascript:void(0)" class="easyui-linkbutton" id="Pass">通过</a>
                            <a href="javascript:void(0)" class="easyui-linkbutton" id="NoPass">不通过</a>
                        </td>
                    </tr>

                </tbody>
            </table>
            <script>
            $("#Pass").click(function () {

               $("#state").val(1);
               submitForm();
            });

            $("#NoPass").click(function () {

                $("#state").val(2);
                submitForm();

            });

            function submitForm() {

                $('#UserApplyServiceAuditing').submit();
            }
            </script>
        </form>

    </div>
</div>